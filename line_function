#include <iostream>
using namespace std;
struct Point
{
    int x;
    int y;
};
int *line(Point a, Point b)
{
    int *res = new int[3];
    if (a.x == b.x)
    {
        if (a.y == b.y)
        {
            return;
        }
        else
        {
            res[0] = 1;
            res[1] = 0;
            res[2] = -a.x;
        }
    }
    else
    {
        if (a.y == b.y)
        {
            res[0] = 0;
            res[1] = 1;
            res[2] = - a.y;
        }
        else
        {
            res[0] = b.y - a.y;  
            res[1] = a.x - b.x;         
            res[2] = - (a.y * (a.x - b.x) + a.x * (b.y - a.y));
           
        }
    }
    return res;
}
double khoangcach(int* res, Point k)
{
    return Math.abs(res[0]*k.x + res[1]*k.y + res[2])/Math.sqrt(res[0]*res[0] + res[1]*res[1]);
}
int main()
{
    
    return 0;
}
